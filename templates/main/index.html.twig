{% extends 'base.html.twig' %}

{% block title %} Home {% endblock %}

{% block body %}


<header class="masthead">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-12 text-center">
      </div>
    </div>
  </div>
</header>

	<section>
		<div class="container">
			<div class="row">
				{% for post in posts %}
					<div class="col-md-4 col-sm-6 my-3">

						<div class="card border-light mb-3" style="max-width: 20rem;">
              <div class="card-header">Post</div>
              <div class="card-body">
                <div class="card-img"> 
                  <img 
                  {# src="{{asset('assets/image/' ~ post.getImageFile() )}}" #}
                   alt="image" class="h-100 w-100">
                </div
                <h4 class="card-title">{{post.title}}</h4>
                <div class="mb-3">
                  <img src="{{ asset('/uploads/' ~ post.image.imageName) }}" alt="Image" class="img-fluid">
              </div>
                <a type="button" 
                 href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-info btn-sm"" 
                >Consulter</a>
              </div>
            </div>
					</div>
				{% endfor %}
        
			</div>
		</div>
	</section>


{% endblock %}
